@model rastreador_de_despesa.Models.Categoria

@{
    ViewData["PageTitle"] = Model.CategoriaId == 0 ? "Criando uma nova categoria" : "Editar categoria";
   
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="AddOrEdit" class="form-layout">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CategoriaId" value="@Model.CategoriaId" />
                
                <div class="mb-4">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="Tipo" value="Despesa" checked="@(Model.Tipo=="Despesa")" />
                        <label class="e-btn" for="radioleft">Despesa</label>
                        <input type="radio" id="radiomiddle" name="Tipo" value="Renda" checked="@(Model.Tipo=="Renda" )" />
                        <label class="e-btn" for="radiomiddle">Renda</label>
                    </div>
                </div>
                
                <div class="mb-4">
                    <ejs-textbox id="titulo" placeholder="Titulo" ejs-for="Titulo" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Titulo" class="text-danger fs-6" ></span>
                </div>
                
                <div class="mb-4">
                    <ejs-textbox id="icone" placeholder="Icone" ejs-for="Icone" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Icone" class="text-danger"></span>
                </div>
                
                <div>
                    <ejs-button id="submit" type="submit" content="Submit" cssClass="e-success"></ejs-button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
